<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:oChan"
        x:Class="oChan.MainWindow"
        x:DataType="vm:MainWindow"
        Title="oChan">
    <StackPanel Margin="10">
        <!-- URL Input Section -->
        <TextBlock Text="Enter 4chan Thread URL:" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBox x:Name="UrlInput" Width="300" Watermark="Enter 4chan URL here..." />
            <Button Content="Add to List" Margin="10,0,0,0" Width="120" Click="OnAddUrl"/>
        </StackPanel>

        <!-- DataGrid for displaying URL, images downloaded, and status -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <!-- Header Row -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="URL" FontWeight="Bold" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Images" FontWeight="Bold" />
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Status" FontWeight="Bold" />

            <!-- Data Rows -->
            <ItemsControl Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding UrlList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Url}" />
                            <TextBlock Grid.Column="1" Text="{Binding ImagesDownloaded}" />
                            <TextBlock Grid.Column="2" Text="{Binding Status}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
</Window>
