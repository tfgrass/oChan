<!-- File: MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="oChan.MainWindow"
        x:DataType="vm:MainWindow"
        xmlns:vm="clr-namespace:oChan"
        Title="oChan">
    <DockPanel>
        <!-- Application Menu -->
        <Menu DockPanel.Dock="Top">
                <MenuItem x:Name="SettingsMenuItem" Header="_Settings" />
                <MenuItem x:Name="AboutMenuItem" Header="_About" />
        </Menu>

        <!-- Main Content -->
        <StackPanel Margin="10">
            <!-- URL Input Section -->
            <TextBlock Text="Enter Thread or Board URL:" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBox x:Name="UrlInput" Width="300" Watermark="Enter URL here..." />
                <Button x:Name="AddUrlButton" Content="Add" Margin="10,0,0,0" Width="120" />
            </StackPanel>

            <!-- Tabs for Threads and Boards -->
            <TabControl Margin="0,10,0,0">
                <!-- Threads Tab -->
                <TabItem Header="Threads">
                    <StackPanel Margin="10">
                        <!-- DataGrid for displaying Thread URL, Progress, and Status -->
                        <!-- ... existing code ... -->
                    </StackPanel>
                </TabItem>

                <!-- Boards Tab -->
                <TabItem Header="Boards">
                    <StackPanel Margin="10">
                        <!-- DataGrid for displaying Board URLs -->
                        <!-- ... existing code ... -->
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </DockPanel>
</Window>
