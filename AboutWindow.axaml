<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="oChan.AboutWindow"
        Title="About oChan"
        Width="400" Height="300">
    <StackPanel Margin="10">
        <TextBlock Text="oChan" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Text="Version 1.0.0" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="oChan is an imageboard thread and board archiving tool." TextWrapping="Wrap" Margin="0,0,0,10"/>
        <Button Content="Close" Width="100" HorizontalAlignment="Center" Click="OnCloseButtonClick"/>
    </StackPanel>
</Window>
